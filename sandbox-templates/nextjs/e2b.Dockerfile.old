# You can use most Debian-based base images
FROM node:21-slim

# Create user with proper ownership to fix EACCES permission errors
RUN groupadd -r user && useradd -r -g user user && \
    mkdir -p /home/user && \
    chown -R user:user /home/user

# Install curl
RUN apt-get update && apt-get install -y curl sudo && apt-get clean && rm -rf /var/lib/apt/lists/*

COPY compile_page.sh /compile_page.sh
RUN chmod +x /compile_page.sh

# Install dependencies and customize sandbox - run as user to avoid permission issues
WORKDIR /home/user

# Create Next.js app as user (not root)
RUN sudo -u user npx --yes create-next-app@15.3.3 . --yes

# Configure shadcn as user
RUN sudo -u user npx --yes shadcn@2.6.3 init --yes -b neutral --force
RUN sudo -u user npx --yes shadcn@2.6.3 add --all --yes

# Switch to user context for running the app
USER user

# Set default command
CMD ["/compile_page.sh"]
