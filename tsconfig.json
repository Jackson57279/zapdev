{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/convex/*": [
        "./convex/*"
      ],
      "next/*": [
        "./src/next-compat/*"
      ],
      "next": [
        "./src/next-compat/index"
      ],
      "convex/nextjs": [
        "./src/next-compat/convex-nextjs"
      ],
      "@clerk/nextjs": [
        "./src/next-compat/clerk"
      ],
      "@clerk/nextjs/server": [
        "./src/next-compat/clerk-server"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src/routeTree.gen.ts"
  ],
  "exclude": [
    "node_modules",
    "tests"
  ]
}
